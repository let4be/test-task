BINARY  := tt

.PHONY: all
all: clean fmt build test

.PHONY: clean
clean:
	#
	# ################################################################################
	# >>> TARGET: clean
	# ################################################################################
	#
	go clean
	rm -rf build


.PHONY: fmt
fmt:
	#
	# ################################################################################
	# >>> TARGET: fmt
	# ################################################################################
	#
	go fmt ./...

.PHONY: test
test:
	#
	# ################################################################################
	# >>> TARGET: test
	# ################################################################################
	#
	go test ./...


.PHONY: build
build:
	#
	# ################################################################################
	# >>> TARGET: build
	# ################################################################################
	#
	
	go build -o build/${BINARY}